<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.favoritePager.FavTrackFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/searchLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/drawable_edit_text_background"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_11sdp"
                    android:layout_marginStart="@dimen/_13sdp"
                    app:srcCompat="@drawable/ic_search_s" />

                <EditText
                    android:id="@+id/etSearch"
                    style="@style/brandon_bold_text_regular_text_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/search"
                    android:singleLine="true"
                    android:textColor="@color/bg_color_1"
                    android:textColorHint="@color/bg_color_1"
                    android:textSize="@dimen/_13ssp" />

            </LinearLayout>
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeToRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginHorizontal="@dimen/_14sdp"

                android:layout_marginTop="@dimen/_8sdp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAffirmation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_fav_affirmation" />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNoDataFound"
            style="@style/brandon_text_medium_text_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_50sdp"
            android:gravity="center"
            android:text="@string/no_favourites_added_yet"
            android:textColor="@color/content_color"
            android:textSize="@dimen/_12ssp"
            android:visibility="gone" />
    </RelativeLayout>
</layout>