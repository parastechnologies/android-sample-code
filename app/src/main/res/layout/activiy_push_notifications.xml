<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="com.app.muselink.ui.activities.settings.pushnotification.PushNotificationViewModel" />

    </data>

<LinearLayout android:orientation="vertical"
