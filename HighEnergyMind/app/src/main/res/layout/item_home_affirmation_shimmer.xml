<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_17sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardElevation="@dimen/_1sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_8sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivBackground"
                        android:layout_width="match_parent"
                        android:background="@color/shimmerColor"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                       />


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivFav"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_6sdp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                       />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_minus8sdp"
                        android:layout_marginBottom="@dimen/_minus8sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvCategory"
                            style="@style/brandon_bold_text_regular_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:text="slkdfjlskd"

                            android:layout_marginBottom="@dimen/_15sdp"
                            android:drawablePadding="@dimen/_6sdp"
                            android:ellipsize="end"
                            android:maxWidth="@dimen/_80sdp"
                            android:maxLines="1"
                            android:background="@color/shimmerColor"
                            android:textColor="@color/shimmerColor"
                            android:textSize="@dimen/_10ssp"
                           />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"
                        android:layout_marginEnd="@dimen/_minus8sdp"
                        android:layout_marginBottom="@dimen/_minus8sdp"
                        app:cardBackgroundColor="@color/bg_color_3"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvDuration"
                            style="@style/brandon_bold_text_regular_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginEnd="@dimen/_24sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:drawablePadding="@dimen/_6sdp"
                            android:text="12 mins"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            app:drawableStartCompat="@drawable/ic_clock" />

                    </com.google.android.material.card.MaterialCardView>

                </RelativeLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTitle"
                    style="@style/brandon_bold_text_medium_text_style"
                    android:layout_width="match_parent"
                    android:background="@color/shimmerColor"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="@color/content_color"
                    android:textSize="@dimen/_13ssp" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTrackDesc"
                    style="@style/brandon_bold_text_regular_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerColor"
                    android:layout_marginHorizontal="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:alpha="0.8"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/content_color" />


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>
</layout>