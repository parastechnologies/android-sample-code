<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".ui.activities.signupLogin.PhoneEmailSignupActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/rectangle_upside_corners_black"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">

                    <LinearLayout
                        android:id="@+id/llCamera"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <soup.neumorphism.NeumorphCardView
                            style="@style/Widget.Neumorph.Button"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="@string/next"
                            android:textSize="@dimen/_15sdp"
                            app:neumorph_shadowColorDark="@color/color_black_100"
                            app:neumorph_shadowColorLight="@color/color_white_25"
                            app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                            app:neumorph_shapeType="flat"
                            app:neumorph_strokeColor="@color/colorBlack"
                            app:neumorph_strokeWidth="@dimen/_1sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_camera">

                                </ImageView>

                            </LinearLayout>

                        </soup.neumorphism.NeumorphCardView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_medium"
                            android:includeFontPadding="false"
                            android:text="@string/camera"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13ssp">

                        </TextView>


                    </LinearLayout>


                    <View
                        android:layout_width="2dp"
                        android:layout_height="@dimen/_85sdp"
                        android:background="@color/colorBottomUpload">

                    </View>


                    <LinearLayout
                        android:id="@+id/llSoundCloud"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <soup.neumorphism.NeumorphCardView
                            style="@style/Widget.Neumorph.Button"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="@string/next"
                            android:textSize="@dimen/_15sdp"
                            app:neumorph_shadowColorDark="@color/color_black_100"
                            app:neumorph_shadowColorLight="@color/color_white_25"
                            app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                            app:neumorph_shapeType="flat"
                            app:neumorph_strokeColor="@color/colorBlack"
                            app:neumorph_strokeWidth="@dimen/_1sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_soundcloud">

                                </ImageView>

                            </LinearLayout>

                        </soup.neumorphism.NeumorphCardView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_medium"
                            android:includeFontPadding="false"
                            android:text="@string/soundcloud"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13ssp">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:gravity="center">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorBottomUpload">

                        </View>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorBottomUpload">

                        </View>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">

                    <LinearLayout
                        android:id="@+id/llLibrary"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <soup.neumorphism.NeumorphCardView
                            style="@style/Widget.Neumorph.Button"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="@string/next"
                            android:textSize="@dimen/_15sdp"
                            app:neumorph_shadowColorDark="@color/color_black_100"
                            app:neumorph_shadowColorLight="@color/color_white_25"
                            app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                            app:neumorph_shapeType="flat"
                            app:neumorph_strokeColor="@color/colorBlack"
                            app:neumorph_strokeWidth="@dimen/_1sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_library">

                                </ImageView>

                            </LinearLayout>

                        </soup.neumorphism.NeumorphCardView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_medium"
                            android:includeFontPadding="false"
                            android:text="@string/library"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13ssp">

                        </TextView>


                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="@dimen/_85sdp"
                        android:background="@color/colorBottomUpload">

                    </View>


                    <LinearLayout
                        android:id="@+id/llNavigate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <soup.neumorphism.NeumorphCardView
                            style="@style/Widget.Neumorph.Button"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="@string/next"
                            android:textSize="@dimen/_15sdp"
                            app:neumorph_shadowColorDark="@color/color_black_100"
                            app:neumorph_shadowColorLight="@color/color_white_25"
                            app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                            app:neumorph_shapeType="flat"
                            app:neumorph_strokeColor="@color/colorBlack"
                            app:neumorph_strokeWidth="@dimen/_1sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_navigation">

                                </ImageView>

                            </LinearLayout>

                        </soup.neumorphism.NeumorphCardView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_medium"
                            android:includeFontPadding="false"
                            android:text="@string/navigate"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13ssp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </View>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>