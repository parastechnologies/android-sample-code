<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".ui.activities.signupLogin.PhoneEmailSignupActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp"
        app:cardCornerRadius="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_backgrounddark"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/dark_close" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/avenir_next_bold"
                    android:text="@string/signup"
                    android:textColor="@color/color_white_100"
                    android:textSize="@dimen/_18ssp" />
            </RelativeLayout>

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:gravity="center"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeColor="@color/cardview_dark_background"
                app:neumorph_strokeWidth="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_weight="2"
                        android:fontFamily="@font/avenir_next_regular"
                        android:gravity="center"
                        android:text="@string/phone"
                        android:textColor="@color/color_white_100"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:fontFamily="@font/avenir_next_regular"
                        android:gravity="center"
                        android:text="@string/email"
                        android:textColor="@color/color_white_100"
                        android:textSize="@dimen/_14ssp" />
                </LinearLayout>
            </soup.neumorphism.NeumorphCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/avenir_next_regular"
                android:gravity="center"
                android:text="@string/Phonesignup_detail"
                android:textColor="@color/color_white_100"
                android:textSize="@dimen/_14ssp" />


            <soup.neumorphism.NeumorphCardView
                android:id="@+id/imgBtnDashBoard"
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:scaleType="centerInside"
                app:neumorph_shadowColorDark="@color/color_darkshadow"
                app:neumorph_shadowColorLight="@color/color_lightshadow"
                app:neumorph_shadowElevation="6dp"
                app:neumorph_strokeWidth="0.3dp"
                app:neumorph_strokeColor="@color/color_grey_75"
                app:neumorph_shapeType="pressed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/phone"
                        android:textColor="@color/color_white_100"
                        android:textSize="@dimen/_14ssp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:background="@null"
                        android:fontFamily="@font/avenir_next_regular"
                        android:gravity="center"
                        android:hint="@string/phone_no"
                        android:textColor="@color/color_white_100"
                        android:textColorHint="@color/color_white_100"
                        android:textSize="@dimen/_14ssp" />
                </LinearLayout>
            </soup.neumorphism.NeumorphCardView>


            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:scaleType="centerInside"
                app:neumorph_shadowColorDark="@color/color_lightshadow"
                app:neumorph_shadowColorLight="@color/color_lightshadow"
                app:neumorph_shadowElevation="1dp"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeColor="@color/color_pink_100"
                app:neumorph_strokeWidth="0.2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="@string/send_code"
                    android:textColor="@color/color_white_100"
                    android:textSize="@dimen/_14ssp" />

            </soup.neumorphism.NeumorphCardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>