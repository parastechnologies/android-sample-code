<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="model"
            type="com.app.muselink.ui.bottomsheets.musiclinkpro.MuselinkProViewModel" />

    </data>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_upside_corners_black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:contentDescription="@null"
                        android:src="@drawable/dark_close" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/get_muselink_pro"
                        android:textColor="@color/color_white_100"
                        android:textSize="@dimen/_18ssp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/avenir_next_regular"
                    android:text="@string/out_of_likes"
                    android:textColor="@color/color_white_100"
                    android:textSize="@dimen/_16ssp">

                </TextView>

                <soup.neumorphism.NeumorphCardView
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    app:neumorph_shadowColorDark="@color/color_black_80"
                    app:neumorph_shadowColorLight="@color/color_white_15"
                    app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                    app:neumorph_shapeType="pressed"
                    app:neumorph_strokeColor="@color/color_black_70"
                    app:neumorph_strokeWidth="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/avenir_next_bold"
                        android:gravity="center"
                        android:text="11 : 43 : 35"
                        android:textColor="@color/colorSky"
                        android:textSize="@dimen/_18ssp">

                    </TextView>

                </soup.neumorphism.NeumorphCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.app.muselink.util.WrappingViewPager
                        android:id="@+id/viewpagerMuzelinkPro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.app.muselink.util.WrappingViewPager>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/viewpagerDots"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                        <soup.neumorphism.NeumorphCardView
                            android:id="@+id/card1"
                            style="@style/CustomShapeAppearance"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_minus7sdp"
                            android:clickable="false"
                            android:padding="0dp"
                            app:neumorph_shadowColorDark="@color/color_grey_20"
                            app:neumorph_shadowColorLight="@color/color_black_25"
                            app:neumorph_shadowElevation="4dp"
                            app:neumorph_strokeColor="@color/color_black_100"
                            app:neumorph_strokeWidth="0.2dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image1"
                                android:layout_width="@dimen/_7sdp"
                                android:layout_height="@dimen/_7sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/drawable_circle_pink" />

                        </soup.neumorphism.NeumorphCardView>


                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/card2"
                        style="@style/CustomShapeAppearance"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_minus7sdp"
                        android:clickable="false"
                        android:padding="0dp"
                        app:neumorph_shadowColorDark="@color/color_grey_20"
                        app:neumorph_shadowColorLight="@color/color_black_25"
                        app:neumorph_shadowElevation="4dp"
                        app:neumorph_strokeColor="@color/color_black_100"
                        app:neumorph_strokeWidth="0.2dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image2"
                            android:layout_width="@dimen/_7sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_gravity="center" />

                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/card3"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_minus7sdp"
                        android:clickable="false"
                        android:padding="0dp"
                        app:neumorph_shadowColorDark="@color/color_grey_20"
                        app:neumorph_shadowColorLight="@color/color_black_25"
                        app:neumorph_shadowElevation="4dp"
                        app:neumorph_strokeColor="@color/color_black_100"
                        app:neumorph_strokeWidth="0.2dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image3"
                            android:layout_width="@dimen/_7sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_gravity="center" />

                    </soup.neumorphism.NeumorphCardView>


                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/card4"
                        style="@style/CustomShapeAppearance"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_minus7sdp"
                        android:clickable="false"
                        android:padding="0dp"
                        app:neumorph_shadowColorDark="@color/color_grey_20"
                        app:neumorph_shadowColorLight="@color/color_black_25"
                        app:neumorph_shadowElevation="4dp"
                        app:neumorph_strokeColor="@color/color_black_100"
                        app:neumorph_strokeWidth="0.2dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image4"
                            android:layout_width="@dimen/_7sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_gravity="center" />

                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/card5"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_minus7sdp"
                        android:clickable="false"
                        android:padding="0dp"
                        app:neumorph_shadowColorDark="@color/color_grey_20"
                        app:neumorph_shadowColorLight="@color/color_black_25"
                        app:neumorph_shadowElevation="4dp"
                        app:neumorph_strokeColor="@color/color_black_100"
                        app:neumorph_strokeWidth="0.2dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image5"
                            android:layout_width="@dimen/_7sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_gravity="center" />

                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/card6"
                        style="@style/CustomShapeAppearance"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_minus7sdp"
                        android:clickable="false"
                        android:padding="0dp"
                        app:neumorph_shadowColorDark="@color/color_grey_20"
                        app:neumorph_shadowColorLight="@color/color_black_25"
                        app:neumorph_shadowElevation="4dp"
                        app:neumorph_strokeColor="@color/color_black_100"
                        app:neumorph_strokeWidth="0.2dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image6"
                            android:layout_width="@dimen/_7sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_gravity="center" />

                    </soup.neumorphism.NeumorphCardView>


                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/card7"
                        style="@style/CustomShapeAppearance"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_minus7sdp"
                        android:clickable="false"
                        android:padding="0dp"
                        app:neumorph_shadowColorDark="@color/color_grey_20"
                        app:neumorph_shadowColorLight="@color/color_black_25"
                        app:neumorph_shadowElevation="4dp"
                        app:neumorph_strokeColor="@color/color_black_100"
                        app:neumorph_strokeWidth="0.2dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image7"
                            android:layout_width="@dimen/_7sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_gravity="center" />

                    </soup.neumorphism.NeumorphCardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <soup.neumorphism.NeumorphCardView
                            android:id="@+id/npmCardMonthly"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            app:neumorph_shadowColorDark="@color/color_black_100"
                            app:neumorph_shadowColorLight="@color/color_white_25"
                            app:neumorph_shadowElevation="3dp"
                            app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                            app:neumorph_strokeColor="@color/transparent"
                            app:neumorph_strokeWidth="1.5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvPriceMonthly"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:fontFamily="@font/avenir_next_bold"
                                        android:text="$734.62"
                                        android:textColor="@color/color_white_100"
                                        android:textSize="@dimen/_15ssp">

                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:fontFamily="@font/avenir_next_regular"
                                        android:text="@string/for_1_month"
                                        android:textColor="@color/color_white_100"
                                        android:textSize="@dimen/_14ssp">

                                    </TextView>

                                </LinearLayout>

                            </RelativeLayout>

                        </soup.neumorphism.NeumorphCardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <soup.neumorphism.NeumorphCardView
                            android:id="@+id/npmCardYearly"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            app:neumorph_shadowColorDark="@color/color_black_100"
                            app:neumorph_shadowColorLight="@color/color_white_25"
                            app:neumorph_shadowElevation="3dp"
                            app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                            app:neumorph_strokeColor="@color/color_pink_100"
                            app:neumorph_strokeWidth="1.5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvPriceYearly"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:fontFamily="@font/avenir_next_bold"
                                        android:text="$428.83"
                                        android:textColor="@color/color_pink_100"
                                        android:textSize="@dimen/_15ssp">

                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:fontFamily="@font/avenir_next_regular"
                                        android:text="@string/for_12_months"
                                        android:textColor="@color/color_white_100"
                                        android:textSize="@dimen/_14ssp">

                                    </TextView>


                                    <TextView
                                        android:visibility="gone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:fontFamily="@font/avenir_next_regular"
                                        android:text="Save 42%"
                                        android:textColor="@color/colorSky"
                                        android:textSize="@dimen/_12ssp">

                                    </TextView>

                                </LinearLayout>


                            </RelativeLayout>

                        </soup.neumorphism.NeumorphCardView>

                    </LinearLayout>

                </LinearLayout>


                <soup.neumorphism.NeumorphButton
                    android:id="@+id/btnUploadNewContent"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/color_purple_100"
                    android:fontFamily="@font/avenir_next_demi"
                    android:includeFontPadding="false"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/upload_new_content"
                    android:textAllCaps="false"
                    android:textColor="@color/color_white_100"
                    android:textSize="@dimen/_18ssp"
                    app:neumorph_shadowColorDark="@color/color_black_100"
                    app:neumorph_shadowColorLight="@color/color_white_25"
                    app:neumorph_shadowElevation="3dp"
                    app:neumorph_strokeColor="@color/colorPink"
                    app:neumorph_strokeWidth="1dp" />


            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

</layout>