<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_back_sc"
        tools:context=".view.activity.setReminder.SetReminderActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_40sdp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_16sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/arrow_back" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_weight="1" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:checked="false"
                    android:thumb="@drawable/custom_thumb"
                    android:track="@drawable/custom_track"

                    app:layout_constraintBottom_toBottomOf="@+id/addIV"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/addIV"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </LinearLayout>


            <com.google.android.material.textview.MaterialTextView
                style="@style/brandon_bold_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_26sdp"
                android:text="@string/set_reminder"
                android:textColor="@color/content_color"
                android:textSize="@dimen/_22ssp" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/brandon_bold_text_regular_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:text="@string/affirmations_work_better_if_we_use_them_every_day_here_you_can_set_how_often_you_want_to_receive_push_notifications_with_affirmations"
                android:textColor="@color/bg_color_2"
                android:textSize="@dimen/_13ssp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_14sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_13sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/_12sdp"
                            android:paddingTop="@dimen/_14sdp"
                            android:paddingEnd="@dimen/_14sdp"
                            android:paddingBottom="@dimen/_11sdp">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/brandon_bold_text_medium_text_style"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/start_time"
                                android:textColor="@color/content_color"
                                android:textSize="@dimen/_13ssp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/ivMinStartTime"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_min" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvStartTimeValue"
                                style="@style/brandon_bold_text_medium_text_style"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_3sdp"
                                android:layout_weight="0.6"
                                android:gravity="center"
                                android:text="9:30 AM"
                                android:textColor="@color/content_color"
                                android:textSize="@dimen/_13ssp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/ivPlusStartTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_max" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:background="@color/bg_color_6" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/_12sdp"
                            android:paddingTop="@dimen/_14sdp"
                            android:paddingEnd="@dimen/_14sdp"
                            android:paddingBottom="@dimen/_11sdp">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/brandon_bold_text_medium_text_style"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/end_time"
                                android:textColor="@color/content_color"
                                android:textSize="@dimen/_13ssp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/ivMinEndTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_min" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvEndTimeValue"
                                style="@style/brandon_bold_text_medium_text_style"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"

                                android:layout_marginHorizontal="@dimen/_3sdp"
                                android:layout_weight="0.6"
                                android:gravity="center"
                                android:text="9:30 AM"
                                android:textColor="@color/content_color"
                                android:textSize="@dimen/_13ssp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/ivPlusEndTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_max" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:background="@color/bg_color_6" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/_12sdp"
                            android:paddingTop="@dimen/_14sdp"
                            android:paddingEnd="@dimen/_14sdp"
                            android:paddingBottom="@dimen/_11sdp">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/brandon_bold_text_medium_text_style"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/how_many_times"
                                android:textColor="@color/content_color"
                                android:textSize="@dimen/_13ssp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/ivMinTimes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_min" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvTimesValue"
                                style="@style/brandon_bold_text_medium_text_style"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_3sdp"
                                android:layout_weight="0.6"
                                android:gravity="center"
                                android:text="@string/times_day"
                                android:textColor="@color/content_color"
                                android:textSize="@dimen/_13ssp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/ivPlusTimes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_max" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:background="@color/bg_color_6" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/_12sdp"
                            android:paddingTop="@dimen/_14sdp"
                            android:paddingEnd="@dimen/_14sdp"
                            android:paddingBottom="@dimen/_11sdp">

                            <com.google.android.material.textview.MaterialTextView
                                style="@style/brandon_bold_text_medium_text_style"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/repeat_on_specific_day"
                                android:textColor="@color/content_color"
                                android:textSize="@dimen/_13ssp" />


                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvWeekDay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_9sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                            app:spanCount="7"
                            tools:itemCount="7"
                            tools:listitem="@layout/item_week_day" />
                    </LinearLayout>

                    <View
                        android:id="@+id/vDisable"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_alignStart="@id/llContainer"
                        android:layout_alignTop="@id/llContainer"
                        android:layout_alignEnd="@id/llContainer"
                        android:layout_alignBottom="@id/llContainer"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="gone" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnAdd"
            android:layout_marginBottom="@dimen/_6sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/addMoreIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/btnAddMore"
                android:layout_below="@id/btnAddMore"
                android:layout_marginEnd="@dimen/_85sdp"
                android:elevation="@dimen/_25sdp"
                android:visibility="gone"
                app:icon="@drawable/ic_plus_circle"
                app:layout_constraintBottom_toBottomOf="@id/btnAddMore"
                app:layout_constraintEnd_toEndOf="@id/btnAddMore"
                app:layout_constraintStart_toStartOf="@id/btnAddMore"
                app:layout_constraintTop_toTopOf="@id/btnAddMore"
                app:srcCompat="@drawable/ic_plus_circle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnAddMore"
                style="@style/brandon_bold_text_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:background="@drawable/edt_text_back"
                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:text="@string/add_more"
                android:textColor="@color/bg_color_1"
                android:textSize="@dimen/_13ssp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdd"
            style="@style/brandon_bold_material_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignWithParentIfMissing="true"
            android:layout_above="@id/tvSkip"
            android:layout_marginBottom="@dimen/_3sdp"
            android:text="@string/save_selection" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSkip"
            style="@style/brandon_text_medium_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:gravity="center"
            android:paddingVertical="@dimen/_4sdp"
            android:text="@string/skip"
            android:textColor="@color/content_color"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnYes" />

    </RelativeLayout>
</layout>