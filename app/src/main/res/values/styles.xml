<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/color_text</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_out_down</item>
        <item name="android:windowExitAnimation">@anim/slide_up_dialog</item>
    </style>
    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <style name="neumorphic_button" />
    <style name="ShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">32dp</item>
    </style>
    <style name="CustomShapeAppearanceComment">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">8dp</item>
    </style>

    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_8sdp</item>
        <item name="neumorph_inset">@dimen/_10sdp</item>
    </style>

    <style name="CustomShapeAppearance_">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_6sdp</item>
        <item name="neumorph_inset">@dimen/_10sdp</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorBackgroundBlack</item>
    </style>
    <style name="CustomShapeAppearanceUploadAudio">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_12sdp</item>
        <item name="neumorph_inset">@dimen/_5sdp</item>
    </style>
    <style name="CustomShapeAppearanceSkip">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_5sdp</item>
        <item name="neumorph_inset">@dimen/_5sdp</item>
    </style>
    <style name="CustomShapeAppearanceDarkButton">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_18sdp</item>
        <item name="neumorph_inset">@dimen/_5sdp</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomShapeAppearanceOval">
        <item name="neumorph_cornerFamily">oval</item>
        <item name="neumorph_cornerSize">32dp</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="CustomShapeAppearanceHome">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">32dp</item>
    </style>

    <style name="CustomShapeAppearanceBottomBar">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">6dp</item>
        <!-- Or if wants different radii depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">6dp</item>
        <item name="neumorph_cornerSizeTopRight">6dp</item>
        <item name="neumorph_cornerSizeBottomLeft">6dp</item>
        <item name="neumorph_cornerSizeBottomRight">6dp</item>
    </style>

</resources>
