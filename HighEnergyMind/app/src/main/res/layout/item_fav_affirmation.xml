<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_9sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardElevation="@dimen/_2sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/home_image" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.5"
                        android:background="@color/black" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvAffirmationText"
                        style="@style/brandon_bold_text_medium_text_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="@dimen/_45sdp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="3"
                        android:text="I am deserving of happiness and fulfillment."
                        android:textSize="@dimen/_14ssp" />


                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:background="@color/white_23"
                        android:padding="@dimen/_2sdp"

                        android:visibility="gone"
                        app:contentPadding="@dimen/_4sdp"
                        app:contentPaddingTop="@dimen/_5sdp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                        app:srcCompat="@drawable/ic_heart" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_minus8sdp"
                        android:layout_marginBottom="@dimen/_minus8sdp"
                        app:cardBackgroundColor="@color/bg_color_3"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvCategory"
                            style="@style/brandon_bold_text_regular_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:drawablePadding="@dimen/_6sdp"
                            android:text="@string/self_love"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            app:drawableStartCompat="@drawable/ic_user_heart" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="@dimen/_minus8sdp"
                        android:layout_marginBottom="@dimen/_minus8sdp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/bg_color_3"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/brandon_bold_text_regular_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginEnd="@dimen/_24sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:drawablePadding="@dimen/_6sdp"
                            android:text="12 mins"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            app:drawableStartCompat="@drawable/ic_clock" />

                    </com.google.android.material.card.MaterialCardView>

                </RelativeLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>
</layout>