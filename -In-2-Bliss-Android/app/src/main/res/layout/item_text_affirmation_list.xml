<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAffirmationGradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1"
            android:elevation="@dimen/_1sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_affirmation_bg_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAffirmationBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:elevation="@dimen/_1sdp"
            android:src="@drawable/ic_back"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:elevation="@dimen/_1sdp"
            android:src="@drawable/ic_menu"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="@dimen/_1sdp"
            android:padding="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_45sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:elevation="@dimen/_1sdp"
                android:paddingHorizontal="@dimen/_14sdp"
                android:paddingVertical="@dimen/_3sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_user_heart"
                    android:elevation="@dimen/_20sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCategory"
                    style="@style/text_Style_roboto_regular_dark_purple_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_2sdp"
                    android:textColor="@color/dark_purple_12046A"
                    android:textSize="@dimen/_13ssp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@id/ivCategory"
                    app:layout_constraintStart_toEndOf="@+id/ivCategory"
                    app:layout_constraintTop_toTopOf="@id/ivCategory" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAffirmationShrink"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginStart="@dimen/_27sdp"
            android:layout_marginBottom="@dimen/_35sdp"
            android:elevation="@dimen/_1sdp"
            android:src="@drawable/ic_shrink"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAffirmationGallery"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginBottom="@dimen/_35sdp"
            android:elevation="@dimen/_1sdp"
            android:src="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivAffirmationShare"
            app:layout_constraintStart_toEndOf="@+id/ivAffirmationShrink"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/addMoreIV"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:elevation="@dimen/_1sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_add_plus"
            android:tint="#12046A"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/ivAffirmationGallery"
            app:layout_constraintEnd_toEndOf="@+id/ivAffirmationGallery"
            app:layout_constraintStart_toStartOf="@+id/ivAffirmationGallery"
            app:layout_constraintTop_toTopOf="@+id/ivAffirmationGallery" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAffirmationShare"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginBottom="@dimen/_35sdp"
            android:elevation="@dimen/_1sdp"
            android:src="@drawable/ic_affirmation_upload"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivAffirmationFav"
            app:layout_constraintStart_toEndOf="@id/ivAffirmationGallery" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAffirmationFav"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginEnd="@dimen/_27sdp"
            android:layout_marginBottom="@dimen/_35sdp"
            android:elevation="@dimen/_1sdp"
            android:src="@drawable/ic_affirmation_fav"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAffirmationRedFav"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginEnd="@dimen/_27sdp"
            android:layout_marginBottom="@dimen/_35sdp"
            android:elevation="@dimen/_1sdp"
            android:src="@drawable/ic_red_fav"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAddAffirmationAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_2sdp"
            android:elevation="@dimen/_1sdp"
            android:src="@drawable/ic_affirmation_add"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/ivAffirmationFav"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/text_Style_roboto_regular_dark_purple_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:elevation="@dimen/_1sdp"
            android:text="@string/minimise"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintEnd_toEndOf="@id/ivAffirmationShrink"
            app:layout_constraintStart_toStartOf="@id/ivAffirmationShrink"
            app:layout_constraintTop_toBottomOf="@id/ivAffirmationShrink" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/text_Style_roboto_regular_dark_purple_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:elevation="@dimen/_1sdp"
            android:text="@string/my_affirmation"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintEnd_toEndOf="@id/ivAffirmationGallery"
            app:layout_constraintStart_toStartOf="@id/ivAffirmationGallery"
            app:layout_constraintTop_toBottomOf="@id/ivAffirmationGallery" />


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/text_Style_roboto_regular_dark_purple_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:elevation="@dimen/_1sdp"
            android:text="@string/share"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintEnd_toEndOf="@id/ivAffirmationShare"
            app:layout_constraintStart_toStartOf="@id/ivAffirmationShare"
            app:layout_constraintTop_toBottomOf="@id/ivAffirmationShare" />


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/text_Style_roboto_regular_dark_purple_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:elevation="@dimen/_1sdp"
            android:text="@string/favourite"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintEnd_toEndOf="@id/ivAffirmationFav"
            app:layout_constraintStart_toStartOf="@id/ivAffirmationFav"
            app:layout_constraintTop_toBottomOf="@id/ivAffirmationFav" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvDate"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_200sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:visibility="invisible"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="@dimen/_1sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_30"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_4sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDate"
                    style="@style/text_Style_roboto_regular_dark_purple_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:text="ascsacsac"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toBottomOf="@id/ivDate"
                    app:layout_constraintStart_toEndOf="@+id/ivDate"
                    app:layout_constraintTop_toTopOf="@id/ivDate" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAffirmation"
            style="@style/text_Style_roboto_bold_dark_purple_2_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_16sdp"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ivAffirmationShrink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivBack" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>