<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    >

    <LinearLayout
        android:background="@drawable/rectangle_upside_corners_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp">

            </View>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/cardUserImage"
                app:neumorph_shadowColorDark="@color/color_black_100"
                app:neumorph_shadowColorLight="@color/color_white_25"
                style="@style/Widget.Neumorph.FloatingActionButton"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:neumorph_strokeColor="@color/colorRed"
                app:neumorph_strokeWidth="2dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/boyset">

                </ImageView>

            </soup.neumorphism.NeumorphCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp">
            </View>

                <TextView
                    android:includeFontPadding="false"
                    android:layout_gravity="center"
                    android:textColor="@color/color_white_100"
                    android:textSize="@dimen/_18ssp"
                    android:fontFamily="@font/avenir_next_demi"
                    android:text="Marshmellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp">
            </View>

            <soup.neumorphism.NeumorphCardView
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/report"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:neumorph_shadowElevation="3dp"
                app:neumorph_shadowColorDark="@color/color_black_100"
                app:neumorph_shadowColorLight="@color/color_white_25"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                app:neumorph_shapeType="flat">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#1a1a1a"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:id="@+id/iv"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_report"
                        app:tint="@color/color_white_100" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.01"
                        android:background="@color/color_white_75" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="3.8"
                        android:paddingLeft="@dimen/_15sdp"
                        android:gravity="left|center_vertical"
                        android:text="@string/report"
                        android:textColor="@color/color_white_100"
                        android:textSize="@dimen/_14ssp" />
                </LinearLayout>
            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/block"
                android:layout_marginTop="@dimen/_10sdp"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:neumorph_shadowElevation="3dp"
                app:neumorph_shadowColorDark="@color/color_black_100"
                app:neumorph_shadowColorLight="@color/color_white_25"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                app:neumorph_shapeType="flat">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#1a1a1a"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_block"
                        app:tint="@color/color_white_100" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.01"
                        android:background="@color/color_white_75" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="3.8"
                        android:paddingLeft="@dimen/_15sdp"
                        android:gravity="left|center_vertical"
                        android:text="@string/block"
                        android:textColor="@color/color_white_100"
                        android:textSize="@dimen/_14ssp" />
                </LinearLayout>
            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/removeMatches"
                android:layout_marginTop="@dimen/_10sdp"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:neumorph_shadowElevation="3dp"
                app:neumorph_shadowColorDark="@color/color_black_100"
                app:neumorph_shadowColorLight="@color/color_white_25"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                app:neumorph_shapeType="flat">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#1a1a1a"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_remove_user"
                        app:tint="@color/color_white_100" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.01"
                        android:background="@color/color_white_75" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="3.8"
                        android:paddingLeft="@dimen/_15sdp"
                        android:gravity="left|center_vertical"
                        android:text="@string/remove_match"
                        android:textColor="@color/color_white_100"
                        android:textSize="@dimen/_14ssp" />
                </LinearLayout>
            </soup.neumorphism.NeumorphCardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp">
            </View>

            <soup.neumorphism.NeumorphButton
                app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:id="@+id/btnClose"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_60sdp"
                android:text="@string/close"
                android:textAllCaps="false"
                app:neumorph_strokeColor="@color/colorPink"
                app:neumorph_strokeWidth="1dp"
                android:textSize="@dimen/_18ssp"
                android:includeFontPadding="false"
                app:neumorph_shadowColorLight="@color/color_white_25"
                app:neumorph_shadowColorDark="@color/color_black_100"
                app:neumorph_backgroundColor="@color/transparent"
                android:background="@color/color_purple_100"
                android:fontFamily="@font/avenir_next_demi"
                android:textColor="@color/color_white_100"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp">
            </View>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>