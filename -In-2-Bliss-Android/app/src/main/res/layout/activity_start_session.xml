<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.in2bliss.ui.activity.home.meditationTrackerMeditate.session.StartSessionVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_purple_80_12046A"
        tools:context=".ui.activity.home.meditationTrackerMeditate.session.StartSessionActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_background_leaves" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/cvMusicTitle"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivBack">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/_3sdp"
                android:paddingVertical="@dimen/_4sdp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivAffirmationProfileBg"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_affirmation_temp_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/circularImage" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitle"
                    style="@style/text_Style_roboto_regular_dark_purple_color"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:text="@={data.title}"
                    android:textColor="@color/inactive_purple_7168A6"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintStart_toEndOf="@id/ivAffirmationProfileBg"
                    app:layout_constraintTop_toTopOf="@id/ivAffirmationProfileBg" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSubTitle"
                    style="@style/text_Style_roboto_regular_dark_purple_color"
                    android:layout_width="match_parent"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:text="@={data.subTitle}"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintBottom_toBottomOf="@id/ivAffirmationProfileBg"
                    app:layout_constraintStart_toEndOf="@id/ivAffirmationProfileBg" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:visibility="gone"
            android:src="@drawable/ic_player_upload"
            app:layout_constraintBottom_toBottomOf="@id/ivMenu"
            app:layout_constraintEnd_toStartOf="@id/ivMenu"
            app:layout_constraintTop_toTopOf="@id/ivMenu" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:src="@drawable/ic_menu"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMeditationGirl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:src="@drawable/ic_meditation_girl_session"
            app:layout_constraintTop_toBottomOf="@id/cvMusicTitle" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTime"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_minus30sdp"
            android:background="@drawable/time_background"
            app:layout_constraintEnd_toEndOf="@id/ivMeditationGirl"
            app:layout_constraintStart_toStartOf="@id/ivMeditationGirl"
            app:layout_constraintTop_toBottomOf="@id/ivMeditationGirl" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTime"
            style="@style/text_Style_roboto_bold_dark_purple_2_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="@={data.time}"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="@id/clTime"
            app:layout_constraintEnd_toEndOf="@id/clTime"
            app:layout_constraintStart_toStartOf="@id/clTime"
            app:layout_constraintTop_toTopOf="@id/clTime"
            tools:text="00:00:00" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEndMeditation"
            style="@style/blue_button_style"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginVertical="@dimen/_23sdp"
            android:text="@string/end_session"
            android:visibility="invisible"
            android:background="@drawable/end_session"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

