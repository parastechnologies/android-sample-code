<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="color_arc">#ffffff</color>
    <color name="color_arc_border">#000000</color>
    <color name="color_indicator">#FF007491</color>
    <color name="color_progress">#00ccff</color>
    <color name="color_text">#000000</color>
    <string name="app_name">CircularView</string>
    <declare-styleable name="CircleView">
		<attr format="float" name="progressCurrentValue"/>
		<attr format="float" name="progressMaximumValue"/>
		<attr format="float" name="progressMinimumValue"/>
		<attr format="float" name="progressStepValue"/>
		<attr format="boolean" name="progressStepAsInteger"/>
		<attr format="dimension" name="progressWidth"/>
		<attr format="color" name="progressColor"/>
		<attr format="boolean" name="progressBarSquared"/>

		<attr format="boolean" name="hasIndicator"/>
		<attr format="color" name="indicatorColor"/>
		<attr format="integer" name="indicatorRadius"/>

		<attr format="dimension" name="arcWidth"/>
		<attr format="color" name="arcColor"/>
		<attr format="boolean" name="arcHasBorder"/>
		<attr format="color" name="arcBorderColor"/>

		<attr format="boolean" name="textEnabled"/>
		<attr format="dimension" name="textSize"/>
		<attr format="color" name="textColor"/>
		<attr format="integer" name="textDecimalPlaces"/>
		<attr format="string" name="textFont"/>

		<attr format="boolean" name="suffixEnabled"/>
		<attr format="string" name="suffixValue"/>

		<attr format="boolean" name="clockwise"/>
		<attr format="boolean" name="enabled"/>
	</declare-styleable>
</resources>