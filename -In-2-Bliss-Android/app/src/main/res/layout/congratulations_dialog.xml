<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCongratulations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_minus52sdp"
            android:background="@drawable/corner_white_bg"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_18sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivBalloonGirl"
            tools:layout_editor_absoluteX="25dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/cream_fef0e8"
                    android:paddingHorizontal="@dimen/_14sdp"
                    android:paddingVertical="@dimen/_8sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivStreak"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_small_streak"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvStreak"
                        style="@style/text_Style_roboto_medium_dark_purple_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:textSize="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="@id/ivStreak"
                        app:layout_constraintStart_toEndOf="@id/ivStreak"
                        app:layout_constraintTop_toTopOf="@id/ivStreak" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/text_Style_roboto_bold_dark_purple_2_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:gravity="center"
                android:text="@string/congratulations_on_7_days_of_meditation"
                android:textSize="@dimen/_20sdp"
                app:layout_constraintEnd_toEndOf="@id/clCongratulations"
                app:layout_constraintStart_toStartOf="@id/clCongratulations"
                app:layout_constraintTop_toBottomOf="@id/cvStreak" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDescription"
                style="@style/text_Style_roboto_regular_dark_purple_2_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:text="@string/you_are_making_remarkable_progress_on_your_mindfulness_journey._Keep_up_the_great_work"
                android:textColor="@color/inactive_purple_7168A6"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintEnd_toEndOf="@id/clCongratulations"
                app:layout_constraintStart_toStartOf="@id/clCongratulations"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                tools:ignore="TextSizeCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStartMeditation"
                style="@style/blue_button_style"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/continue_"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBalloonGirl"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginStart="@dimen/_60sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_balloon_girl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

