<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundBlack"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundBlack"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_below="@+id/tvSoundPro"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center">


            <me.tankery.lib.circularseekbar.CircularSeekBar
                android:id="@+id/circularSeekbar"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_160sdp"
                android:layout_gravity="center_horizontal"
                app:cs_circle_color="@color/colorBackgroundBlack"
                app:cs_circle_progress_color="@color/color_purple_100"
                app:cs_circle_shadow_color="@color/color_white_15"
                app:cs_circle_stroke_width="1.5dp"
                app:cs_circle_stroke_width_background="6dp"
                app:cs_circle_progress_background="@color/colorBackgroundBlack"
                app:cs_disable_pointer="false"
                app:cs_disable_progress_glow="true"
                app:cs_end_angle="40"
                app:cs_maintain_equal_circle="true"
                app:cs_progress="10"
                app:cs_start_angle="-220">

            </me.tankery.lib.circularseekbar.CircularSeekBar>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_below="@+id/tvSoundPro"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="visible">

            <soup.neumorphism.NeumorphCardView
                android:clickable="false"
                android:id="@+id/cardInsideeProfile"
                style="@style/Widget.Neumorph.FloatingActionButton"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_5sdp"
                app:neumorph_shadowColorDark="@color/color_black_100"
                app:neumorph_shadowColorLight="@color/color_white_15"
                app:neumorph_shadowElevation="4dp"
                app:neumorph_strokeColor="@color/color_black_100"
                app:neumorph_strokeWidth="1.5dp"/>


            <TextView
                android:id="@+id/tvCurrentDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/avenir_next_regular"
                android:text="00:00"
                android:textColor="@color/color_icon_grey"
                android:textSize="@dimen/_10ssp">

            </TextView>

            <TextView
                android:id="@+id/tvSongTotalDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/avenir_next_regular"
                android:text="00:00"
                android:textColor="@color/color_icon_grey"
                android:textSize="@dimen/_10ssp">

            </TextView>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/llPausePlay"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/tvSoundPro"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_53sdp"
            android:background="@drawable/circle_with_gradient_black"
            android:gravity="center">


            <ImageView
                android:id="@+id/imgPausePlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play_btn_black">

            </ImageView>


        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/tvSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/avenir_next_demi"
        android:text="@string/american_idiot"
        android:textColor="@color/color_white_100"
        android:textSize="@dimen/_18ssp">

    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

    </View>

</LinearLayout>