                        android:fontFamily="@font/avenir_medium"
                        android:includeFontPadding="false"
                        android:text="@string/turn_off_on"
                        android:textColor="@color/colorBlackLightText"
                        android:textSize="@dimen/_14ssp">


                    </TextView>

