<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    xmlns:circleview="http://schemas.android.com/tools" android:orientation="vertical">


    <View
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

    </View>



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_upside_corners_black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp">

            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imgClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/dark_close" />

            </RelativeLayout>


            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.muselink.util.WrappingViewPager
                    android:id="@+id/viewPagerAudioPlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.app.muselink.util.WrappingViewPager>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/viewpagerDots"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/card1"
                    style="@style/CustomShapeAppearance"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_minus7sdp"
                    android:clickable="false"
                    android:padding="0dp"
                    app:neumorph_shadowColorDark="@color/color_grey_20"
                    app:neumorph_shadowColorLight="@color/color_black_25"
                    app:neumorph_shadowElevation="4dp"
                    app:neumorph_strokeColor="@color/color_black_100"
                    app:neumorph_strokeWidth="0.2dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image1"
                        android:layout_width="@dimen/_7sdp"
                        android:layout_height="@dimen/_7sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/drawable_circle_red" />

                </soup.neumorphism.NeumorphCardView>

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/card2"
                    style="@style/CustomShapeAppearance"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_minus7sdp"
                    android:clickable="false"
                    android:padding="0dp"
                    app:neumorph_shadowColorDark="@color/color_grey_20"
                    app:neumorph_shadowColorLight="@color/color_black_25"
                    app:neumorph_shadowElevation="4dp"
                    app:neumorph_strokeColor="@color/color_black_100"
                    app:neumorph_strokeWidth="0.2dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image2"
                        android:layout_width="@dimen/_7sdp"
                        android:layout_height="@dimen/_7sdp"
                        android:layout_gravity="center" />

                </soup.neumorphism.NeumorphCardView>


                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/card3"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_minus7sdp"
                    android:clickable="false"
                    android:padding="0dp"
                    app:neumorph_shadowColorDark="@color/color_grey_20"
                    app:neumorph_shadowColorLight="@color/color_black_25"
                    app:neumorph_shadowElevation="4dp"
                    app:neumorph_strokeColor="@color/color_black_100"
                    app:neumorph_strokeWidth="0.2dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image3"
                        android:layout_width="@dimen/_7sdp"
                        android:layout_height="@dimen/_7sdp"
                        android:layout_gravity="center" />

                </soup.neumorphism.NeumorphCardView>


            </LinearLayout>


            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <soup.neumorphism.NeumorphFloatingActionButton
                    android:id="@+id/npmStar"
                    style="@style/Widget.Neumorph.FloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:scaleType="centerInside"
                    app:neumorph_shadowColorLight="@color/color_white_15"
                    app:neumorph_shadowColorDark="@color/color_black_100"
                    android:src="@drawable/star_3d"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:neumorph_strokeColor="@color/color_black_100"
                    app:neumorph_strokeWidth="1.5dp">


                </soup.neumorphism.NeumorphFloatingActionButton>


                <soup.neumorphism.NeumorphFloatingActionButton
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:id="@+id/cardShareTo"
                    style="@style/Widget.Neumorph.FloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:scaleType="centerInside"
                    app:neumorph_shadowColorLight="@color/color_white_15"
                    app:neumorph_shadowColorDark="@color/color_black_100"
                    android:src="@drawable/ic_info_icon"
                    android:tint="@color/color_white_100"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:neumorph_strokeColor="@color/color_black_100"
                    app:neumorph_strokeWidth="1.5dp">


                </soup.neumorphism.NeumorphFloatingActionButton>


                <soup.neumorphism.NeumorphCardView
                    android:layout_alignParentRight="true"
                    android:id="@+id/cardDM"
                    style="@style/Widget.Neumorph.FloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:scaleType="centerInside"
                    app:neumorph_shadowColorLight="@color/color_white_15"
                    app:neumorph_shadowColorDark="@color/color_black_100"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:neumorph_backgroundColor="@color/colorBackgroundBlack"
                    app:neumorph_strokeColor="@color/transparent"
                    app:neumorph_strokeWidth="1.5dp">

                    <rjsv.circularview.CircleView
                        app:arcBorderColor="@color/colorGreen"
                        app:arcHasBorder="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        app:enabled="false"
                        app:arcColor="@color/transparent"
                        app:textColor="@color/color_white_100"
                        app:textFont="font/avenir_black.otf"
                        >

                    </rjsv.circularview.CircleView>


                </soup.neumorphism.NeumorphCardView>


            </RelativeLayout>





        </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>