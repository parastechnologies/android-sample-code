
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_checked="true">
    <shape>
        <solid android:color="#F1F9F9" /> <!-- Checked background color -->
        <corners android:radius="@dimen/_8sdp" /> <!-- Optional: Set corner radius if you want rounded corners -->
    </shape>
</item>
<item android:state_checked="false">
    <shape>
        <solid android:color="@color/white" /> <!-- Unchecked background color -->
        <corners android:radius="@dimen/_8sdp" /> <!-- Optional: Set corner radius if you want rounded corners -->
    </shape>
</item>
</selector>
