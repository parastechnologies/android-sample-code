<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_20sdp"
        android:background="@drawable/bottom_sheet_bg"
        tools:context=".ui.activity.home.affirmationDetails.customizeAffirmationBottomSheet.CustomiseMediationTrackerFragment">
        

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_avatar"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/text_Style_roboto_medium_dark_purple_color"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/play_music_during_my_meditation"
            android:textAlignment="textStart"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivImage" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCustomizeYourSession"
            style="@style/text_Style_roboto_regular_dark_purple_color"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/select_duration"
            android:textAlignment="textStart"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCustomizeMusicLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/light_blue_stroke_bg_16"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_6sdp"
            app:layout_constraintBottom_toBottomOf="@id/tvCustomizeYourSession"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvCustomizeYourSession">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivClock2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_clock"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCustomizeYourMusicTime"
                style="@style/text_Style_roboto_regular_dark_purple_color"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/_4sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textAlignment="textStart"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="@id/ivClock2"
                app:layout_constraintStart_toEndOf="@id/ivClock2"
                app:layout_constraintTop_toTopOf="@id/ivClock2" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:background="@drawable/light_blue_stroke_bg_16"
            android:paddingVertical="@dimen/_16sdp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCustomizeYourSession">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_6sdp"
                app:cardBackgroundColor="@color/blue_dfeefd"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <NumberPicker
                android:id="@+id/hourPicker"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:theme="@style/numberPicker"
                android:descendantFocusability="blocksDescendants"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHour"
                style="@style/text_Style_roboto_medium_dark_purple_color"
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/hour"
                android:textAlignment="textStart"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toBottomOf="@id/hourPicker"
                app:layout_constraintStart_toEndOf="@id/hourPicker"
                app:layout_constraintTop_toTopOf="@id/hourPicker" />

            <View
                android:id="@+id/view"
                android:layout_width="1sp"
                android:layout_height="@dimen/_1sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <NumberPicker
                android:id="@+id/MinutePicker"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_66sdp"
                android:theme="@style/numberPicker"
                android:checked="false"
                android:descendantFocusability="blocksDescendants"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/view"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMinute"
                style="@style/text_Style_roboto_medium_dark_purple_color"
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/min"
                android:textAlignment="textStart"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toBottomOf="@id/MinutePicker"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/MinutePicker"
                app:layout_constraintTop_toTopOf="@id/MinutePicker" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPlayMusic"
            style="@style/text_Style_roboto_medium_dark_purple_color"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_26sdp"
            android:text="@string/play_music_during_my_meditation"
            android:textAlignment="textStart"
            android:textSize="@dimen/_14ssp"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clTimePicker" />

        <ToggleButton
            android:id="@+id/toggleMusicMeditation"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:focusable="true"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvPlayMusic"
            app:layout_constraintTop_toTopOf="@+id/tvPlayMusic"
            android:background="@drawable/ch"
            android:focusableInTouchMode="true"
            android:textOff=""
            android:textOn="" />

        <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:id="@+id/music"
            android:visibility="gone"
            app:constraint_referenced_ids="toggleMusicMeditation,tvPlayMusic"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPlayEnd"
            style="@style/text_Style_roboto_medium_dark_purple_color"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_26sdp"
            android:text="@string/play_ending_bell"
            android:textAlignment="textStart"
            android:textSize="@dimen/_14ssp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPlayMusic" />

        <ToggleButton
            android:id="@+id/toggleEndBell"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_16sdp"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvPlayEnd"
            app:layout_constraintTop_toTopOf="@+id/tvPlayEnd"
            android:background="@drawable/ch"
            android:focusableInTouchMode="true"
            android:textOff=""
            android:textOn="" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMusicDuringAffirmation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_46sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:visibility="visible"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:background="@drawable/light_blue_stroke_bg"
            android:backgroundTint="@color/blue_dfeefd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPlayEnd">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clIncludingMusicDuringAffirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/light_blue_stroke_bg"
                android:paddingVertical="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/text_Style_roboto_regular_dark_purple_color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/include_music_during_affirmation"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchMusicEnabled"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:thumb="@drawable/switch_thumb"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:track="@drawable/switch_track" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivBackgroundImage"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginVertical="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_error_place_holder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clIncludingMusicDuringAffirmation"
                app:shapeAppearanceOverlay="@style/circularImage" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBackgroundMusicTitle"
                style="@style/text_Style_roboto_regular_dark_purple_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintBottom_toBottomOf="@id/ivBackgroundImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivBackgroundImage"
                app:layout_constraintTop_toTopOf="@id/ivBackgroundImage" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:src="@drawable/ic_arrow_right"
                app:layout_constraintBottom_toBottomOf="@id/ivBackgroundImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivBackgroundImage" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNoBackgroundMusicSelected"
                style="@style/text_Style_roboto_regular_dark_purple_color"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:ellipsize="end"
                android:gravity="center_vertical|center_horizontal"
                android:maxLines="1"
                android:text="@string/select_background_music"
                android:textSize="@dimen/_11ssp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivBackgroundImage"
                app:layout_constraintTop_toBottomOf="@id/clIncludingMusicDuringAffirmation" />


            <androidx.constraintlayout.widget.Group
                android:layout_width="wrap_content"
                app:constraint_referenced_ids="ivBackgroundImage,tvBackgroundMusicTitle"
                android:visibility="visible"
                android:id="@+id/backgroundMusic"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStartSession"
            style="@style/blue_button_style"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:text="@string/start_this_session"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clMusicDuringAffirmation"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>